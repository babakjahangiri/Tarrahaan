@{
    ViewBag.Title = "Confirm to Logoff";
    ViewBag.SectionName = "logoff";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-10 col-md-12 col-sm-12 col-xs-12">
        <div class="page-title-seperator">
            <div>
                <h1 class="page-title">Log Off Confirmation</h1>
            </div>
        </div>
    </div>
</div>
<div>
    <h6>You logged in as <i> @User.Identity.Name </i> and your Authentication Type is <i> @User.Identity.AuthenticationType </i></h6>
</div>

 
@*using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))*@

@using (@Html.BeginRouteForm("LogOffRoutePost", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div>
        <h3>Are you sure you want to logout? </h3>
    </div>

    <button type="submit" class="btn btn-primary btn-lg" id="btnlogoff"> Yes, Please </button>
}
 

