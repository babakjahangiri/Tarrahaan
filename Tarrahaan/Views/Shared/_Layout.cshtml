@using Tarrahaan.CoreLib.Localization
@{
    ViewBag.lang = Language.GetCurrent();

}
<!DOCTYPE html>
<html lang="@ViewBag.Lang">
@* ReSharper disable once MissingTitleTag *@
<head>
    @RenderSection("PageSeo", required: false)
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Babak Jahangiri - ITANC">
    <link rel="shortcut icon" href="~/Content/icons/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/Content/icons/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" sizes="57x57" href="~/Content/icons/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="~/Content/icons/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/Content/icons/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/icons/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/Content/icons/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/Content/icons/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="~/Content/icons/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/Content/icons/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/Content/icons/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="~/Content/icons/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Content/icons/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/icons/favicon-16x16.png">
    <link rel="manifest" href="~/Content/icons/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="~/Content/icons/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">

    @RenderSection("MiroData", required: false)

    @Styles.Render("~/assets/css")
    @Styles.Render("~/assets/css-font")
    @RenderSection("extrastyles", required: false)
</head>
<body>
    <header class="header-main container-fluid">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-10">
                <a href="~/en"><img src="~/Content/Images/tarahan-logo.png" class="img-responsive mainlogo" alt="Tarrahaan" title="Tarrahaan Logo" /></a>
            </div>
            <div class="col-xs-2 hidden-lg hidden-md hidden-sm visible-xs">
                <a href="~/fa/home" class="align-right"><img src="~/Content/Images/fa-flag.png" class="language-flag" alt="فارسی" Title="زبان فارسی"></a>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8 visible-lg visible-md visible-sm hidden-xs">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <a href="~/fa/home" class="align-right"><img src="~/Content/Images/fa-flag.png" class="language-flag" alt="فارسی" Title="زبان فارسی"></a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <nav class="menu">
                                    <ul class="align-right">
                                        <li><a href=@Url.Content("~/en/contact")>Contact</a></li>
                                        <li><a href=@Url.Content("~/en/about")>About</a></li>
                                        <li><a href=@Url.Content("~/en/list/rent")>Rent</a></li>
                                        <li><a href=@Url.Content("~/en/list/sale")>Sale</a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <nav class="navbar navbar-default nav-main hidden-lg hidden-md hidden-sm visible-xs" id="main" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#tarrahan-nav-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--<a class="navbar-brand" href="#">Tarrahaan</a>-->
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="tarrahan-nav-collapse">
                <ul class="nav navbar-nav">
                    <li><a href=@Url.Content("~/en/list/sale")>Sale</a></li>
                    <li><a href=@Url.Content("~/en/list/rent")>Rent</a></li>
                    <li><a href=@Url.Content("~/en/about")>About</a></li>
                    <li><a href=@Url.Content("~/en/contact")>Contact</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    @RenderSection("slider", required: false)
    <main role="main">
        @RenderBody()
    </main>
    <footer class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-5 footer-links">
                    <ul>
                        <li><a href="@Url.Content("~/en/home")">Main Page</a></li>
                        <li><a href="@Url.Content("~/en/list/rent/Residential/Apartment")">Apartment to let</a></li>
                        <li><a href="@Url.Content("~/en/list/sale/Residential/Apartment")">Apartment for sale</a></li>
                        <li><a href="@Url.Content("~/en/list/rent/Residential/Villa")">Villa to let</a></li>
                        <li><a href="@Url.Content("~/en/list/sale/Residential/Villa")">Villa for sale</a></li>
                        <li><a href="@Url.Content("~/en/about")">About us</a></li>
                        <li><a href="@Url.Content("~/en/contact")">Contact us</a></li>
                    </ul>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-5 text-left footer-mid">
                    <div id="followus">Follow us in social networks :</div>
                    <div class="social-icons">
                        <ul class="padding-left-0">
                            <li class="sqr-linkedin"><a href="https://www.linkedin.com/in/%E2%80%8Cbahram-moradian-92460141"><i class="fa fa-linkedin fa-2x"></i></a></li>
                            <li class="sqr-facebook"><a href="https://www.facebook.com/tarahanagency"><i class="fa fa-facebook fa-2x"></i></a></li>
                            @*<li class="sqr-google"><a href="#"><i class="fa fa-google-plus fa-2x"></i></a></li>
                             <li class="sqr-instagram"><a href="#"><i><i class="fa fa-instagram fa-2x" aria-hidden="true" style="z-index: 4;"></i></i></a></li>*@
                        </ul>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-2 text-center footer-extra">
                    <!-- ITANC LOGO -->
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 footer-copyright">
                <span class="align-left">Copyright © 2016 Tarrahaan Housing Agency.</span>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/assets/js/jquery")
    @Scripts.Render("~/assets/js/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/assets/js/modernizr")
</body>
</html>
