                </div>

                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-2 text-center footer-extra">
                    <!-- ITANC LOGO -->
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 footer-copyright">
                <span class="align-right">کپی رایت © 2016 آژانس املاک طراحان.</span>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/assets/js/jquery")
    @Scripts.Render("~/assets/js/bootstrap-rtl")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/assets/js/modernizr")
</body>
</html>
