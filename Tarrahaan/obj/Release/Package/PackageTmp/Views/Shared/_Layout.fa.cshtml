<body>
<header class="header-main container-fluid">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-10">
            <a href="~/fa" class="align-right"><img src="~/Content/Images/tarahan-logo.png" class="img-responsive mainlogo" alt="Tarrahaan" title="Tarrahaan Logo"/></a>
        </div>
        <div class="col-xs-2 hidden-lg hidden-md hidden-sm visible-xs">
            <a href="~/en/home" class="align-left"><img src="~/Content/Images/en-flag.png" class="language-flag" alt="English" Title="English Language"></a>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-8 visible-lg visible-md visible-sm hidden-xs">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <a href="~/en/home" class="align-left"><img src="~/Content/Images/en-flag.png" class="language-flag" alt="English" Title="English Language"></a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <nav class="menu">
                                <ul class="align-right">
                                    <li><a href=@Url.Content("~/fa/list/sale")>فروش</a></li>
                                    <li><a href=@Url.Content("~/fa/list/rent")>اجاره</a></li>
                                    <li><a href=@Url.Content("~/fa/about")>درباره ما</a></li>
                                    <li><a href=@Url.Content("~/fa/contact")>تماس با ما</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<nav class="navbar navbar-default nav-main hidden-lg hidden-md hidden-sm visible-xs" id="main" role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#tarrahan-nav-collapse" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <!--<a class="navbar-brand" href="#">Tarrahaan</a>-->
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="tarrahan-nav-collapse">
            <ul class="nav navbar-nav">
                <li><a href=@Url.Content("~/fa/list/sale")>فروش</a></li>
                <li><a href=@Url.Content("~/fa/list/rent")>اجاره</a></li>
                <li><a href=@Url.Content("~/fa/about")>درباره ما</a></li>
                <li><a href=@Url.Content("~/fa/contact")>تماس با ما</a></li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
    @RenderSection("slider", required: false)
<main role="main">
    @RenderBody()
</main>
    <footer class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-5 footer-links">
                    <ul>
                        <li><a href=@Url.Content("~/fa/home")>صفحه اصلی</a></li>
                        <li><a href="~/fa/list/rent/Residential/Apartment">آپارتمان جهت اجاره</a></li>
