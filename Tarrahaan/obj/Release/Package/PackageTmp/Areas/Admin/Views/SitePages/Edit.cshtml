@model Tarrahaan.Areas.Admin.Models.SitePageViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    var langTitle=" ";
}

@if (Model.LangId == "en"){
    langTitle = "English";
}
@if (Model.LangId == "fa")
{
    langTitle = "Persian";
}



@section ExtraStyles
{
  
}

<article>
    <div class="row">
        <div class="col-lg-10 col-md-12 col-sm-12 col-xs-12">
            <div class="page-title-seperator">
                <div>
                    <h1 class="page-title">Edit Site Page - @langTitle Langauge</h1>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            Error : @ViewBag.Error
        </div>
    }

    @using (Html.BeginForm("Edit", "SitePages", FormMethod.Post, new { @class = "form-horizontal", @role = "form", @id = "EditContentForm" }))
    {

        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">

                <div class="form-group">
                    <div class="col-lg-4 col-md-4 col-xs-6 col-sm-12">
                        <label class="control-label">Page Title : </label>
                        @Html.TextBoxFor(m => m.PageTitle, new {@class = "form-control", @placeholder = "Page Title", @maxlength = "20"})
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                            <label class="control-label">Page Content : </label>
                            @Html.TextAreaFor(m => m.PageContent, new {@name = "PageContentEditor", @id = "PageContentEditor"})
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                <button type="submit" class="btn btn-primary btn-lg" id="btnsave"> Save </button>
            </div>
    </div>
    @Html.HiddenFor(m=>m.PageId)
    @Html.HiddenFor(m=>m.LangId)
    }




    <br />


</article>




@section scripts
{
 
  <script src="~/lib/ckeditor/ckeditor.js"></script>

<script>
                // Replace the <textarea id="editor1"> with a CKEditor
                // instance, using default configuration.
    CKEDITOR.replace('PageContentEditor');
</script>

}
